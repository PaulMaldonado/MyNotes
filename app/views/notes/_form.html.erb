<div class="container">
  <div class="card">
    <h2 class="text-center"><%= name %> Nota</h2>
    <br><br>
    <div class="card-body">
      <%= simple_form_for(@note, html: { class: 'form-horizontal' }) do |f| %>
        <%= f.input :title, label: "Título", input_html: { class: "form-control" } %>
        <%= f.input :description, label: "Descripción", input_html: { class: "form-control" } %>
        <%= f.button :submit, "Guardar", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>